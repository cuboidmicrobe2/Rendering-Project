# Use Google style as the base.
BasedOnStyle: LLVM

# Indentation
IndentWidth: 4           # Use 4 spaces for indentation.
TabWidth: 4              # Width of a tab character.
UseTab: Never            # Always use spaces instead of tabs.

# Line Length
ColumnLimit: 120         # Set maximum line length to 100 characters.

# Braces
BreakBeforeBraces: Attach  # Attach braces to the preceding line.
BraceWrapping:
  AfterStruct: true       # Place `}` on a new line for struct initializations.
  AfterEnum: true         # Place `}` on a new line for enum initializations.
  AfterClass: true        # Place `}` on a new line for class initializations.
# Spaces
SpaceBeforeParens: ControlStatements  # Add space before parentheses in control statements.
SpacesInParentheses: false           # No spaces inside parentheses.
SpacesInSquareBrackets: false        # No spaces inside square brackets.
SpaceAfterCStyleCast: true           # Add space after C-style casts.

# Alignments
AlignTrailingComments: true         # Align trailing comments.
AlignConsecutiveAssignments: true   # Align assignments in consecutive lines.

# Includes
SortIncludes: true                  # Sort `#include` statements.

# Pointer and Reference Alignment
DerivePointerAlignment: false
PointerAlignment: Left             # Place `*` or `&` to the right of variable names.

# Other Options
AllowShortFunctionsOnASingleLine: All  # Allow short functions to be written on one line.
AlwaysBreakAfterReturnType: None         # Keep return type and function name on the same line.
IndentCaseLabels: true                   # Indent `case` labels in `switch` statements.
AllowShortIfStatementsOnASingleLine: true  # Allow short if statements to be written on one line.
